generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Account {
  id           String    @id
  userId       String
  accessToken  String?
  accountId    String
  createdAt    DateTime  @default(now())
  expiresAt    DateTime?
  idToken      String?
  password     String?
  providerId   String
  refreshToken String?
  updatedAt    DateTime
  User         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, accountId])
  @@index([userId])
}

model Contribution {
  id               String   @id
  itemId           String
  userId           String
  amount           Float    @default(0)
  note             String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime
  totalPrice       Float?
  contributionType String   @default("PARTIAL")
  Item             Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  User             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([itemId, userId])
  @@index([itemId])
  @@index([userId])
}

model Event {
  id               String             @id
  title            String
  description      String?
  creatorId        String
  invitationCode   String             @unique
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  User             User               @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  EventParticipant EventParticipant[]
  List             List[]

  @@index([creatorId])
  @@index([invitationCode])
}

model EventParticipant {
  id       String   @id
  eventId  String
  userId   String
  joinedAt DateTime @default(now())
  Event    Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  User     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

model Item {
  id           String         @id
  listId       String
  title        String
  description  String?
  amazonUrl    String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  Contribution Contribution[]
  List         List           @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId])
}

model List {
  id          String   @id
  userId      String
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  eventId     String
  Item        Item[]
  Event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

model Session {
  id        String   @id
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  ipAddress String?
  token     String   @unique
  updatedAt DateTime
  userAgent String?
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id               String             @id
  email            String             @unique
  name             String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  emailVerified    Boolean            @default(false)
  image            String?
  Account          Account[]
  Contribution     Contribution[]
  Event            Event[]
  EventParticipant EventParticipant[]
  List             List[]
  Session          Session[]
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@unique([identifier, value])
}
